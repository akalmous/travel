{% extends 'base.html.twig' %}

{% block title %}Hello TripController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
{% for trip in trips %}


<div class="container justify-content-center row row-cols-1 row-cols-md-3 g-4">
    <div class="col-md-4">
        <div class="card h-100">
            {% for picture in trip.pictures | slice(0, 1) %}
            <img src="{{ asset('/uploads/'~picture.name) }}" class="card-img-top" alt="...">
            {% endfor %}
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
            </div>
        </div>
    </div>    
</div>



{% endfor %}


</div>

<style>
.card-img-top {
width: 100%;
height: 20vh;
object-fit: cover;
}
</style>

{% endblock %}