{% extends 'base.html.twig' %}

{% block title %}Hello DashbordController!{% endblock %}
 

 {% block body %}
   
<div class="container">
    <h2 style = "text-align : center">DASHBORD DE L'ANNEE EN COURS</h2>
 </div>
    <div class="row">
        <div class="col-6">
        
            <canvas class="my-4" id="inscription"></canvas>
        </div>

