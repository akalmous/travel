   <script>
   /* globals Chart:false */

(() => {
  'use strict'

    
  // Graphs

  const ctx = document.getElementById('inscription')
  const xValues = ["Guides", "Utlisateurs inscrits"];
  const yValues = [{{guides}}, {{users}}];
  // eslint-disable-next-line no-unused-vars
  const myChart = new Chart(ctx, {
    type: 'bar',
    
    data: {
      labels: xValues,
      
      datasets: [{
        label: "DASHBORD DES INSCRIPTIONS",
        data: yValues,
        lineTension: 0,
        backgroundColor: [
        'rgba(255, 99, 132, 0.2)',
        'rgba(255, 159, 64, 0.2)',
        ],
        borderColor: [
        'rgb(255, 99, 132)',
        'rgb(255, 159, 64)',
        ],

        
        borderWidth: 1,
        pointBackgroundColor: '#007bff'
      }]
    },

    
    options: {
      plugins: {
        legend: {
          display: true,
          
        },
        tooltip: {
          boxPadding: 3
        }
      },
      scales: {
            y: {
                title: {
                    display : true,
                    text : 'Nombre ',

                    }
                },

            x: {
                title: {
                    display : true,
                    text : 'test',

                    },
            }
            }
        }
    
  })
})()

   </script>

